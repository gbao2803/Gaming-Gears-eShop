                    </button>
                    <button class="right-0 -mt-20 absolute top-1/2 hover:text-darkBlueGray-400 md:-mt-0">
                        <svg width="8" height="12" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.289849 1.54064C-0.0966146 1.18719 -0.0966145 0.615928 0.28985 0.265087C0.676314 -0.087058 1.30071 -0.0896664 1.68718 0.265087L7.21015 5.36206C7.59662 5.71421 7.59662 6.28416 7.21015 6.63892L1.68718 11.7359C1.30215 12.088 0.676312 12.088 0.289848 11.7359C-0.0966159 11.3824 -0.0966159 10.8112 0.289848 10.4603L4.81927 5.99853L0.289849 1.54064Z" fill="currentColor"></path>
                        </svg>
                    </button>

                </div>
            </div>
            <div class="px-4 w-full lg:w-1/2 xl:pl-20">
                <div class="mb-6 max-w-xl">
                    <p class="mb-8 flex items-start">
                        <span class="text-blue-500 font-heading flex items-center text-6xl font-medium">
                            <span class="mr-2 text-xl">đ</span>
                            <span>@string.Format("{0:#,##0}", Model.GiaTien)</span>
                        </span>
                    </p>
                    <p class="text-gray-500 my-10 text-lg">@Model.MoTa</p>
                </div>

                <div class="-mx-2 my-12 flex flex-wrap">
                    <div class="px-2 mb-2 w-full md:w-2/3 md:mb-0">
                        @using (Html.BeginForm("AddToCart", "ShoppingCart_63131848", FormMethod.Post))
                        {
                            @Html.Hidden("productId", Model.MaSP)
                            <button class="py-4 px-2 font-heading text-white bg-blue-500 block w-full cursor-pointer rounded-xl text-center text-xl font-medium leading-8 tracking-tighter duration-200 hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                                Thêm vào giỏ hàng
                            </button>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<div class="my-8">
    @Html.Action("LaptopPartial", "LoaiSP_63131848")
</div>





