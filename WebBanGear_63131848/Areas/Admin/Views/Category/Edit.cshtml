@model WebBanGear_63131848.Models.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-between items-center py-4">
    <h2 class="font-bold text-xl ">Chỉnh sửa loại sản phẩm</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.MaLoaiSP, htmlAttributes: new { @class = "block text-gray-500 font-bold text-lg md:text-left mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.MaLoaiSP, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "VD: CARD, MAIN,..." } })
            @Html.ValidationMessageFor(model => model.MaLoaiSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "Tên loại sản phẩm" } })
            @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.TextAreaFor(model => model.MoTa, new { @class = "bg-white appearance-none border-2 border-gray-200 rounded w-full h-[200px] py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "Mô tả về sản phẩm" })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <input type="submit" value="Lưu" class="btn btn-primary font-medium" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger font-medium" })

    </div>
</div>
}
