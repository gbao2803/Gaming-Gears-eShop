@model WebBanGear_63131848.Models.PhanQuyen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="py-4 flex items-center justify-between">
    <h2 class="text-xl font-bold">Chỉnh sửa phân quyền</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "w-full" }))
{
    @Html.AntiForgeryToken()

<div class="">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaQuyen)
    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.MaQuyen, htmlAttributes: new { @class = "block text-gray-500 font-bold text-lg md:text-left mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.MaQuyen, new { htmlAttributes = new { @class = "bg-gray-200 appearance-none border-2 h-[45px] border-gray-300 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.MaQuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.TenQuyen, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "Tên loại sản phẩm" } })
            @Html.ValidationMessageFor(model => model.TenQuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <input type="submit" value="Lưu" class="btn btn-primary text-white font-medium" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger text-white font-medium" })

    </div>
</div>
}