@model WebBanGear_63131848.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="py-4 flex items-center justify-between">
    <h2 class="text-xl font-bold">Chỉnh sửa đơn hàng</h2>
</div>

@using (Html.BeginForm("Edit", "DonHang_63131848", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDH)
    @Html.HiddenFor(model => model.NgayDat)
    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.MaDH, htmlAttributes: new { @class = "block text-gray-500 font-bold text-lg md:text-left mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.MaDH, new { htmlAttributes = new { @class = "bg-gray-200 appearance-none border-2 h-[45px] border-gray-300 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.MaDH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <p class="text-gray-500 mb-1 pr-4 block text-lg font-bold md:text-left md:mb-0">Mã người dùng</p>
        <div class="">
            @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control px-2" })
            @Html.ValidationMessageFor(model => model.NguoiDung.MaNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.DiaChiDH, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.DiaChiDH, new { htmlAttributes = new { @class = "bg-white appearance-none border-2 h-[45px] border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder = "Địa chỉ đặt hàng" } })
            @Html.ValidationMessageFor(model => model.DiaChiDH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-6 md:flex md:flex-col">
        <div class="">
            @Html.LabelFor(model => model.NgayDat, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div class="">
            <input type="date" value="@Model.NgayDat" class="bg-white h-[45px] border-gray-200 py-2 px-2 text-gray-700 w-full appearance-none rounded border-2 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" />
            @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mb-6 md:flex md:flex-col">
        <div>
            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "block text-gray-500 font-bold md:text-left text-lg mb-1 md:mb-0 pr-4" })
        </div>
        <div>
            @Html.DropDownListFor(model => model.TinhTrang, new List<SelectListItem>
             {
                 new SelectListItem { Text = "Chờ xác nhận", Value = "false" },
                 new SelectListItem { Text = "Đã xác nhận", Value = "true" }

             }, new { @class = "form-control px-2" })
            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <input type="submit" value="Lưu" class="btn btn-primary text-white font-medium" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-danger text-white font-medium" })
    </div>
</div>
}