@using WebBanGear_63131848.Models;
@model List<SanPham>


<style>
    [type=submit] {
        background-color: #3B82F6;
    }
</style>


<div class="bg-danger bg-white p-2 py-5 flex w-full justify-between rounded-t-md">
    <a href="@Url.Action("ProductFilter", "Product_63131848", new { categoryName = "Card đồ họa" })" style="padding-left:20px" class="text-black cursor-pointer text-2xl font-semibold duration-200 hover:text-indigo-500">Card đồ họa</a>
    <a href="@Url.Action("ProductFilter", "Product_63131848", new { categoryName = "Card đồ họa" })" style="padding-right:20px" class="text-black cursor-pointer text-2xl font-semibold duration-200 hover:text-indigo-500">Xem thêm</a>
</div>
<div class="bg-white w-full rounded-b-md">
    <div class="owl-carousel owl-theme flex">
        @foreach (var item in Model)
        {
            <div class="item card card-compact max-w-[250px] bg-base-100 m-4 inline-block rounded-t-xl drop-shadow-lg">
                <a href="@Url.Action("Details", "Product_63131848", new { id = item.MaSP })">
                    <figure class="rounded-t-xl border-0 outline-0">
                        <img src="@Url.Content("~/HinhanhSP/" + item.HinhAnh)" alt="@item.TenSP"
                             class="border-0 object-cover outline-0 duration-500 hover:cursor-pointer hover:scale-105" style="width: 300px; height: 200px;" />
                    </figure>
                </a>
                <div class="card-body h-60 bg-white flex flex-col justify-between rounded-b-2xl">
                    <h2 class="card-title text-black text-base font-semibold hover:cursor-pointer" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-oarient: vertical; overflow: hidden;">
                        <a href="@Url.Action("Details", "Product_63131848", new { id = item.MaSP })">
                            @item.TenSP
                        </a>
                    </h2>
                    <div class="card-actions justify-start">
                        <div style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;"
                             class="badge badge-primary badge-outline text-sm">@item.LoaiSanPham.TenLoai</div>
                            <div style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;"
                                 class="badge badge-secondary badge-outline text-sm">@item.NhaCungCap.TenNCC</div>

                            </div>
                            <div class="card-actions justify-end">
                                <p class="text-[red] text-xl font-bold">@string.Format("{0:#,##0đ}", item.GiaTien)</p>
                            </div>
                            <div class="card-actions justify-end">
                                @using (Html.BeginForm("AddToCart", "ShoppingCart_63131848", FormMethod.Post))
                                {
                                    @Html.Hidden("productId", item.MaSP)
                                    <button type="submit"
                                            class="py-2 px-4 font-heading text-white bg-blue-500 block rounded-xl text-center font-medium leading-8 tracking-tighter duration-200 hover:bg-blue-400 focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50">
                                        Thêm vào giỏ hàng
                                    </button>
                                }
                            </div>

                        </div>
                    </div>
                }
    </div>
</div>

